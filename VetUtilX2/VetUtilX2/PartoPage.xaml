<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VetUtilX2.PartoPage">
  <ScrollView Padding="5">
    <StackLayout>
      <Label Text="Espécie:"/>
      <Picker x:Name="pkEspecie" SelectedIndexChanged="EspecieSelecionada"  />
      <Label Text="Data cruzamento:"/>
      <DatePicker DateSelected="DataSelecionada" Date="{Binding Data}" />
      <Label Text="Data mínima e máxima estimada"></Label>
      <Label Text="{Binding Resultado}"/>
    </StackLayout>
  </ScrollView>
  
  
</ContentPage>